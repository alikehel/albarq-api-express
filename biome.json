{
    "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 110,
        "lineEnding": "lf",
        "ignore": []
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "trailingComma": "none",
            "lineEnding": "lf"
        }
    },
    "json": {
        "parser": {
            "allowTrailingCommas": false
        }
    },
    "files": {
        "ignore": ["node_modules"],
        "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "src/**/*.json"]
    }
}
