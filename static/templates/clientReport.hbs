<!doctype html>
<html lang="ar" dir="rtl">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>كشف عميل</title>
</head>

<body class="px-20">
	<header>
		<table>
			<tr>
				<td>رقم الكشف: {{reportData.id}}</td>
				<td>كشف عميل</td>
				<td>عدد الطلبيات: {{add reportData.baghdadOrdersCount reportData.governoratesOrdersCount}}</td>
				<td rowspan="3"><img src="{{reportData.company.logo}}" /></td>
			</tr>
			<tr>
				<td>التاريخ: {{date reportData.createdAt}}</td>
				<td>العميل: {{reportData.clientReport.client.name}}</td>
				<td>عدد طلبيات بغداد: {{reportData.baghdadOrdersCount}}</td>
			</tr>
			<tr>
				<td>صافي العميل: {{reportData.clientNet}}</td>
				<td>الصفحة: {{reportData.clientReport.store.name}}</td>
				<td>عدد طلبيات المحافظات: {{reportData.governoratesOrdersCount}}</td>
			</tr>
		</table>
	</header>
	<main>
		<table>
			<thead>
				<tr>
					<th>#</th>
					<th>رقم الوصل</th>
					<th>أنشئ في</th>
					<th>هاتف المستلم</th>
					<th>عنوان المستلم</th>
					<th>مبلغ الوصل</th>
					<th>المبلغ المستلم</th>
					<th>مبلغ التوصيل</th>
					<th>صافي العميل</th>
					<th>الملاحظات</th>
				</tr>
			</thead>
			<tbody>
				{{#each orders}}
				<tr>
					<td class="nowrap">{{inc @index}}</td>
					<td>{{receiptNumber}}</td>
					<td>{{date createdAt}}</td>
					<td>{{mapPhones recipientPhones}}</td>
					<td>{{recipientAddress}}</td>
					<td>{{totalCost}}</td>
					<td>{{paidAmount}}</td>
					<td>{{deliveryCost}}</td>
					<td>{{clientNet}}</td>
					<td>{{notes}}</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</main>
	<footer>التوقيع: <span class="light">______________________________________________</span></footer>
	<section class="watermark">{{reportData.company.name}}</section>
</body>

</html>
