{
    "name": "albarq-api",
    "version": "1.0.0",
    "description": "Albarq API: A RESTful API for Albarq Delivery App & Albarq Admin Dashboard",
    "main": "index.js",
    "scripts": {
        "build": "yarn run clean && tsc",
        "start": "yarn run swagger:autogen && prisma migrate deploy && yarn run build && node build/index.js",
        "start:dev": "ts-node-dev --respawn --transpile-only --exit-child ./src/index.ts",
        "start:dev:old": "nodemon ./src/index.ts",
        "docker:compose:up": "docker-compose up -d",
        "docker:compose:down": "docker-compose down",
        "prisma:migrate:reset": "yarn dlx prisma db push && yarn dlx prisma generate && yarn dlx prisma migrate dev && yarn dlx prisma migrate reset",
        "prisma:migrate:dev": "yarn dlx prisma migrate dev",
        "prisma:studio": "yarn dlx prisma studio",
        "prisma:seed": "yarn dlx prisma generate && yarn dlx prisma db seed",
        "swagger:autogen": "ts-node ./src/swagger/swagger.ts",
        "watch": "tsc-watch --esModuleInterop src/index.ts --outDir ./build && 'node ./build/index.js'",
        "clean": "rimraf build/",
        "biome:safe": "yarn dlx @biomejs/biome check --apply src",
        "biome:unsafe": "yarn dlx @biomejs/biome check --apply-unsafe src"
    },
    "prisma": {
        "seed": "ts-node src/database/seed.ts",
        "schema": "src/database/schema.prisma"
    },
    "keywords": [],
    "author": "Ali Kehel",
    "license": "ISC",
    "dependencies": {
        "@anatine/zod-mock": "^3.13.3",
        "@anatine/zod-openapi": "^2.2.2",
        "@faker-js/faker": "^8.3.1",
        "@prisma/client": "^5.8.0",
        "@scalar/express-api-reference": "^0.2.9",
        "@types/morgan": "^1.9.9",
        "@types/pdfmake": "^0.2.8",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "canvas": "^2.11.2",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "firebase-admin": "^12.0.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "morgan-body": "^2.6.9",
        "multer": "^1.4.5-lts.1",
        "openapi3-ts": "^4.2.1",
        "pdfmake": "^0.2.8",
        "shrink-ray-current": "^4.1.3",
        "swagger-autogen": "^2.23.7",
        "swagger-themes": "^1.2.30",
        "swagger-ui-express": "^5.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3",
        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@biomejs/biome": "1.5.1",
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.5",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.2",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "prisma": "^5.8.0",
        "ts-node": "^10.9.2",
        "tsc-watch": "^6.0.4",
        "yarn-upgrade-all": "^0.7.2"
    },
    "engines": {
        "node": "^20.8"
    },
    "packageManager": "yarn@4.0.2"
}
