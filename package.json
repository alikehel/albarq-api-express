{
    "name": "albarq-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start:dev": "nodemon ./src/index.ts",
        "start": "yarn run swagger-autogen && prisma migrate deploy && yarn run build && node build/index.js",
        "build": "yarn run clean && tsc",
        "clean": "rimraf build/",
        "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
        "lint": "eslint . --ext .ts",
        "watch": "tsc-watch --esModuleInterop src/index.ts --outDir ./build && 'node ./build/index.js'",
        "swagger-autogen": "ts-node ./src/swagger/swagger.ts",
        "migrate:reset": "set NODE_ENV=dev& npx prisma db push && npx prisma generate && npx prisma migrate dev && npx prisma migrate reset",
        "prisma:migrate:dev": "set NODE_ENV=dev& npx prisma migrate dev --no-name",
        "seed": "set NODE_ENV=dev&  npx prisma generate && npx prisma db push && npx prisma db seed",
        "prisma:studio": "npx prisma studio"
    },
    "prisma": {
        "seed": "ts-node src/database/seed.ts",
        "schema": "src/database/schema.prisma"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@anatine/zod-mock": "^3.13.2",
        "@anatine/zod-openapi": "^2.2.0",
        "@faker-js/faker": "^8.2.0",
        "@prisma/client": "^5.4.2",
        "@types/morgan": "^1.9.6",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.20.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.1",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "prisma": "^5.4.2",
        "swagger-autogen": "^2.23.1",
        "swagger-themes": "^1.2.28",
        "swagger-ui-express": "^5.0.0",
        "typescript": "^5.0.4",
        "winston": "^3.11.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/node": "^20.8.5",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.0.4"
    }
}
